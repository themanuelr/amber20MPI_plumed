phi: TORSION ATOMS=@phi-2
psi: TORSION ATOMS=@psi-2

METAD ...
   LABEL=metad
   ARG=phi,psi
   FILE=../HILLS.data
   RESTART=NO
   GRID_MIN=-pi
   GRID_MAX=pi
